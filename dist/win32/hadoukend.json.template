{
    "dataPath": "[DATA_PATH]",

    "bittorrent":
    {
        "default_save_path": "[BITTORRENT_SAVE_PATH]",
        "state_path": "${dataPath}/state/"
    },

    "extensions":
    {
        "autoadd":
        {
            "enabled": false
        },

        "automove":
        {
            "enabled": false
        },

        "jsengine":
        {
            "enabled": false,
            "path": "${dataPath}/js",
            "script": "hadouken.js"
        },

        "pushbullet":
        {
            "enabled": false,
            "token": "YOUR-PUSHBULLET-AUTH-TOKEN",
            "enabledEvents":
            [
                "hadouken.loaded",
                "torrent.added",
                "torrent.finished"
            ]
        }
    },

    "http":
    {
        "auth":
        {
            "type": "[HTTP_AUTH_TYPE]",
            "token": "[HTTP_AUTH_TOKEN]",
            "basic":
            {
                "userName": "[HTTP_AUTH_BASIC_USERNAME]",
                "password": "[HTTP_AUTH_BASIC_PASSWORD]"
            }
        },

        "port": [HTTP_PORT],

        "ssl":
        {
            "enabled": false,
            "privateKeyFile": "",
            "privateKeyPassword": ""
        }
    },

    "logging":
    {
        "channels":
        {
            "console":
            {
                "class": "ColorConsoleChannel",
                "pattern": "%s: [%p] %t"
            },
            "file":
            {
                "class": "FileChannel",
                "compress": true,
                "path": "${dataPath}/hadouken.log",
                "pattern": "%Y-%m-%d %H:%M:%S %s: [%p] %t",
                "rotation": "5 M"
            },
            "splitter":
            {
                "class": "SplitterChannel",
                "channels": "console,file"
            }
        },

        "loggers":
        {
            "root":
            {
                "channel": "splitter",
                "level": "trace"
            }
        }
    },

    "openSSL":
    {
        "client":
        {
            "caConfig": "${application.dir}cacert.pem",
            "cipherList": "ALL:!ADH:!LOW:!EXP:!MD5:@STRENGTH",
            "invalidCertificateHandler":
            {
                "name": "RejectCertificateHandler"
            },
            "loadDefaultCAFile": true
        },

        "server":
        {
            "privateKeyFile": "${http.ssl.privateKeyFile}",
            "caConfig": "${application.dir}cacert.pem",
            "verificationMode": "relaxed",
            "loadDefaultCAFile": true,
            "cipherList": "ALL:!ADH:!LOW:!EXP:!MD5:@STRENGTH",
            "privateKeyPassphraseHandler":
            {
                "name": "KeyFileHandler",
                "options":
                {
                    "password": "${http.ssl.privateKeyPassword}"
                }
            },
            "invalidCertificateHandler":
            {
                "name": "RejectCertificateHandler"
            }
        }
    }
}
